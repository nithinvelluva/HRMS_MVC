<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/x-icon" href="../Content/Images/icon-crm.ico">    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/Helpers/Common.js"></script>    
</head>
<body>
    <div class="body-content">
        <div class="app-header">
            <div class="nav-container">
                <div class="nav-logo text-center">
                    <a class="app-url-click">
                        <img class="app-icon" />
                    </a>
                </div>
            </div>
        </div>   
        <div class="container">
            @RenderBody()
            <footer class="text-center">
                <p style="color:#000000">&copy; @DateTime.Now.Year - Hrms Application</p>
            </footer>
        </div>
    </div>
</body>
</html>
<script>
    var app_Icon = hostDomain + "/Content/Images/icon-crm.png"
    $('.app-icon').attr("src", app_Icon);
    $('.app-url-click').attr("href", hostDomain);
</script>