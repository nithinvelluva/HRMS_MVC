@{
    ViewBag.Title = "HRMS";
}
@model HrmsMvc.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <title>ForgotPassword</title>    
</head>
<body>
    <div id="wrapper" style="padding-top:70px;">
        <section>
            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { id = "paswdFrgtForm" }))
            {
                @Html.AntiForgeryToken()
                <form autocomplete="off" method="post">
                    <div class="waitIconDiv col-lg-12 col-md-12 col-xs-12 col-sm-12 text-center">
                        <img alt="Progress" src="~/Content/Images/wait_icon.gif" width="50" height="50" id="imgProg" />
                    </div>
                    <div class="login-card">
                        <div id="frgtMailSentDiv">
                            <div class="row">
                                <h3 class="modal-title text-center">Forgot Password</h3>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UserEmail)
                                        @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @style = "float:left;", @class = "text-danger", @id = "ErrorMsg" })                                       
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    Know your password ? <a href="~/Login/Login" class="hrefLink">Login</a>
                                </div>
                            </div>
                            <br />
                            <div class="row text-center pull-right">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <input type="submit" class="login login-submit btn btn-primary btn-fill" value="Submit"
                                           id="pwdResetSubmitBtn" name="actionName" />
                                </div>
                            </div>
                        </div>
                        <div id="frgtMailSuccDiv" style="display:none">
                            <div class="row">
                                <h3 class="modal-title text-center">We just emailed you a link</h3>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    @Html.Label(" Please check your email for a link to reset your password", new { @class = "text-success" })
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                                    <a href="~/Login/Login" class="hrefLink"
                                       id="btnForgotPwd">Back to login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </section>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        $('#UserEmail').val('');
        $('#frgtMailSentDiv').show();
        $('#frgtMailSuccDiv').hide();
        function showLoad() {
            $(".waitIconDiv").show();
            $(".login-card").addClass("disablediv");
            $(".waitIconDiv").css("display", "block");
        }
        function HideLoad() {
            $(".waitIconDiv").hide();
            $(".login-card").removeClass("disablediv");
            $(".waitIconDiv").css("display", "none");
        }
        $('#UserEmail').on('blur', function () {
            if (this.value.toString().length <= 0) {
                $('#UserEmail').css('border-color', 'red');
                $('#ErrorMsg').text("Please enter your email to receive password reset link");
                $('#ErrorMsg').show();
            }
            else {
                $('#ErrorMsg').hide();
                $('#UserEmail').css('border-color', '');
            }
        });
        function resetValidation() {
            $('#ErrorMsg').hide();            
            $('#UserEmail').css('border-color', '');
        }
        $("#paswdFrgtForm").submit(function () {
            try {
                var f = $("#paswdFrgtForm");
                {
                    resetValidation();
                    showLoad();
                    $.post(f.action, f.serialize(), function (result) {
                        //console.log(result);
                        HideLoad();
                        if (result != null) {
                            var status = result["status"];
                            var erroMsg = result["rtrnMsg"];
                            if (status) {
                                $('#UserEmail').val('');
                                $('#frgtMailSentDiv').hide();
                                $('#frgtMailSuccDiv').show();
                            }
                            else {
                                $('#UserEmail').css('border-color', 'red');
                                $('#ErrorMsg').show();

                                switch (erroMsg) {
                                    case "EMPTY": $('#ErrorMsg').text("Please enter your email to receive password reset link");
                                        break;
                                    case "INV": $('#ErrorMsg').text("Enter a valid email id");
                                        break;
                                    case "RNE": $('#ErrorMsg').text("Entered email id is not registered with us");
                                        break;
                                    default:
                                }
                            }
                        }
                    });
                }
                return false;
            }
            catch (e) {
                showMessageBox(ERROR, "An unexpected error occured !!");
            }
        });
    });
</script>