@{
    ViewBag.Title = "HRMS";
}
@model HrmsMvc.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <title>HRMS</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <style>
        #ErrorMsg {
            display: none;
        }
    </style>
</head>
<body>
    <div class="wrapper" style="padding-top:70px;">
        <section>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                <form autocomplete="off">
                    <div class="login-card">
                        <h2 class="text-center">HRMS</h2><br>
                        @Html.TextBoxFor(model => model.UserName,"", new { @class = "form-control", placeholder = "USERNAME", onblur = "onBlurInput()" })
                        @Html.TextBoxFor(model => model.Password,"", new { @class = "form-control", placeholder = "PASSWORD", type = "password", onblur = "onBlurInput()" })
                        @Html.Label("Invalid credentials", new { @id = "ErrorMsg", @class = "text-danger" })
                        <input type="submit" name="login" class="login login-submit btn btn-primary btn-fill" value="Sign In">
                        <br />
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <a href="~/Login/ForgotPassword" class="pull-right hrefLink"
                               id="btnForgotPwd">Forgot Password ?</a>
                        </div>
                    </div>
                </form>
            }
        </section>
    </div>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $('#UserName').val('');
        $('#Password').val('');
        $('#UserName').focus();
        var error = @Html.Raw(Json.Encode(ViewBag.ErrorMsg));
        if(error!=null)
        {
            $('#ErrorMsg').show();
            $('#ErrorMsg').text(error);
        }
    });

    function onBlurInput(){
        if ($('#UserName').val().toString().length > 0 && $('#Password').val().toString().length > 0) {           
            $('#ErrorMsg').hide();
        }
    }   
</script>

